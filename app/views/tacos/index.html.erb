<p id="notice"><%= notice %></p>

<h1>Listing Tacos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Rating</th>
      <th>Comment</th>
      <th>Lattitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tacos.each do |taco| %>
      <tr>
        <td><%= taco.name %></td>
        <td><%= taco.image %></td>
        <td><%= taco.rating %></td>
        <td><%= taco.comment %></td>
        <td><%= taco.lattitude %></td>
        <td><%= taco.longitude %></td>
        <td><%= link_to 'Show', taco %></td>
        <td><%= link_to 'Edit', edit_taco_path(taco) %></td>
        <td><%= link_to 'Destroy', taco, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

